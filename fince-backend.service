[Unit]
Description=Fince Backend API Service
After=network.target postgresql.service redis-server.service

[Service]
Type=simple
User=dev
Group=dev
WorkingDirectory=/home/dev/project-fince/backend
Environment=PATH=/home/dev/project-fince/backend/venv/bin
ExecStart=/home/dev/project-fince/backend/venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
